{
  "author": "Metrological, Bas van Meurs <b.van.meurs@metrological.com>",
  "name": "@lightningjs/core",
  "version": "2.7.1",
  "license": "Apache-2.0",
  "main": "dist/lightning.js",
  "module": "index.js",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./index.d.ts",
        "default": "./index.js"
      },
      "require": {
        "types": "./dist/lightning.js",
        "default": "./index.d.ts"
      }
    }
  },
  "files": [
    "tsconfig.json",
    "index.js",
    "index.d.ts",
    "src/**",
    "dist/**",
    "devtools/**"
  ],
  "scripts": {
    "build": "rollup -c",
    "release": "npm run build && npm publish --access public",
    "typedoc": "typedoc --tsconfig tsconfig.typedoc.json",
    "tsd": "tsd"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:rdkcentral/Lightning.git"
  },
  "bugs": {
    "url": "https://github.com/rdkcentral/Lightning/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@babel/plugin-transform-parameters": "^7.8.3",
    "@babel/plugin-transform-spread": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "chai": "^4.2.0",
    "mocha": "^6.2.1",
    "rollup": "^1.30.1",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-license": "2.5.0",
    "rollup-plugin-terser": "^5.1.2",
    "sinon": "^7.5.0",
    "tsd": "^0.21.0",
    "typedoc": "^0.23.10"
  }
}
